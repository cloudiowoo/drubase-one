# BaaS Functions Service Environment Configuration
# This file is used when running in Docker environment

# Server Configuration
PORT=3001
NODE_ENV=production
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=http://localhost,http://127.0.0.1,http://nginx

# Drupal API Configuration  
DRUPAL_API_URL=http://nginx
DRUPAL_API_KEY=

# Function Execution Limits
DEFAULT_TIMEOUT=30000
MAX_TIMEOUT=300000
DEFAULT_MEMORY_LIMIT=128
MAX_MEMORY_LIMIT=512

# Database Configuration
DATABASE_URL=postgresql://postgres:${DB_PASSWORD:-baas_password}@pg17:5432/drubase

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
JWT_SECRET=baas_functions_jwt_secret_change_in_production
API_KEY_HEADER=X-API-Key

# Monitoring and Logging
ENABLE_METRICS=true
LOG_FILE_PATH=./logs/

# Development Settings (disabled in production)
DEV_MODE=false
ENABLE_DEBUG_LOGS=false
FUNCTION_CODE_CACHE=true