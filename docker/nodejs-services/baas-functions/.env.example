# BaaS Functions Service Environment Configuration
# Copy this file to .env and customize for your environment

# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=debug

# CORS Configuration
ALLOWED_ORIGINS=http://localhost,http://127.0.0.1,http://local.drubase.com

# Drupal API Configuration  
DRUPAL_API_URL=http://localhost
DRUPAL_API_KEY=your_api_key_here

# Function Execution Limits
DEFAULT_TIMEOUT=30000
MAX_TIMEOUT=300000
DEFAULT_MEMORY_LIMIT=128
MAX_MEMORY_LIMIT=512

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/drubase

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
API_KEY_HEADER=X-API-Key

# Monitoring and Logging
ENABLE_METRICS=true
LOG_FILE_PATH=./logs/

# Development Settings
DEV_MODE=true
ENABLE_DEBUG_LOGS=true
FUNCTION_CODE_CACHE=false