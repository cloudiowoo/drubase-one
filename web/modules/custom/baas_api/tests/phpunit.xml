<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd"
         bootstrap="../../../../core/tests/bootstrap.php"
         colors="true"
         beStrictAboutTestsThatDoNotTestAnything="true"
         beStrictAboutOutputDuringTests="true"
         beStrictAboutChangesToGlobalState="true"
         failOnWarning="true"
         printerClass="\Drupal\Tests\Listeners\HtmlOutputPrinter">
  
  <php>
    <ini name="error_reporting" value="32767"/>
    <ini name="memory_limit" value="256M"/>
    <env name="SIMPLETEST_BASE_URL" value="http://localhost"/>
    <env name="SIMPLETEST_DB" value="pgsql://drupal:drupal@postgres/drupal"/>
    <env name="BROWSERTEST_OUTPUT_DIRECTORY" value="/tmp/browsertest"/>
    <env name="BROWSERTEST_OUTPUT_BASE_URL" value="http://localhost"/>
  </php>
  
  <testsuites>
    <testsuite name="baas_api">
      <directory>./src</directory>
    </testsuite>
    <testsuite name="unit">
      <directory>./src/Unit</directory>
    </testsuite>
    <testsuite name="kernel">
      <directory>./src/Kernel</directory>
    </testsuite>
    <testsuite name="functional">
      <directory>./src/Functional</directory>
    </testsuite>
  </testsuites>
  
  <coverage>
    <include>
      <directory>../src</directory>
    </include>
    <exclude>
      <directory>../src/Tests</directory>
    </exclude>
  </coverage>
  
  <logging>
    <junit outputFile="test-results.xml"/>
    <teamcity outputFile="test-teamcity.xml"/>
  </logging>
  
  <listeners>
    <listener class="\Drupal\Tests\Listeners\DrupalListener"/>
  </listeners>
  
</phpunit>